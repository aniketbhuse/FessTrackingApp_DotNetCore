<div class="login-container d-flex justify-content-center align-items-center vh-100">
    <div class="login-card p-4 shadow-lg rounded-4">
        <h2 class="text-center mb-4 fw-bold">Welcome Back 👋</h2>

        <form>
            <div class="mb-3">
                <label for="email" class="form-label fw-semibold">Email</label>
                <input type="email" [(ngModel)]="loginObj.email" name="email" class="form-control custom-input" id="email" placeholder="Enter your email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label fw-semibold">Password</label>
                <input type="password" [(ngModel)]="loginObj.password" name="password" class="form-control custom-input" id="password" placeholder="Enter your password" required>
            </div>

            <button class="btn btn-primary w-100 rounded-pill py-2" (click)="onLogin()">Login</button>

            <div class="text-center mt-3">
                <a href="#" class="text-decoration-none">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>
